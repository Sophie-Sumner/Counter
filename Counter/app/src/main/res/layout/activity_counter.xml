<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <Button
        android:id="@+id/add"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        android:drawableLeft="@drawable/ad"
        android:text="ADD"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/reduce"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        android:drawableLeft="@drawable/du"
        android:text="REDUCE"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/clear"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        android:drawableLeft="@drawable/fr"
        android:text="CLEAR"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/textview_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="The current number is: 0"
        android:textAllCaps="false"
        android:textColor="#e5f0f0"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/set"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:textSize="18sp"
        android:drawableLeft="@drawable/se"
        android:text="SET"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/exit"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textSize="18sp"
        android:drawableLeft="@drawable/close"
        android:text="Exit"
        android:textAllCaps="false" />



</LinearLayout>